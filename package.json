{
  "name": "electron-react-typescript-app",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "start:react": "cross-env NODE_ENV=development webpack serve --hot --config webpack.renderer.config.js",
    "start:electron": "tsc ./src/main.ts && cross-env NODE_ENV=development electron ./src/main.js",
    "start": "npm-run-all --parallel start:react start:electron",
    "build": "npm-run-all build:react build:electron",
    "build:electron": "webpack --config webpack.main.config.js --mode=production",
    "build:react": "webpack --config webpack.renderer.config.js --mode=production",
    "package": "electron-forge package",
    "server": "echo 'this script is not used for the project now' && cross-env NODE_ENV=development electron-forge start",
    "make": "electron-forge make"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@electron-forge/cli": "^7.6.0",
    "@electron-forge/maker-deb": "^7.6.0",
    "@electron-forge/maker-rpm": "^7.6.0",
    "@electron-forge/maker-squirrel": "^7.6.0",
    "@electron-forge/maker-zip": "^7.6.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.0",
    "@electron-forge/plugin-fuses": "^7.6.0",
    "@electron/fuses": "^1.8.0",
    "@types/node": "^22.10.2",
    "@types/react": "^17.0.83",
    "@types/react-dom": "^17.0.26",
    "babel-loader": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "33.2.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "html-webpack-plugin": "^5.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "parser": "typescript"
  }
}
